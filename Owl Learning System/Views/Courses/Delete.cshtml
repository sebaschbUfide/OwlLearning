@model mysqltest.Models.courses
@Html.Partial("_Crudslayout")
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar</title>
    <link href="~/css/navStyle/navStyle.css" rel="stylesheet" />

</head>

<body style="background-color: #ffffff;">



    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.course_id)

        <div class="form-actions no-color">

            <div class="container-fluid" style="margin-top: 3%;">

                <div class="jumbotron jumbotron-fluid" style="background-color: #667b68; width:48%">
                    <div class="container">

                        <div class="form-horizontal">
                            <h2 style="color: #EAE5E0;">Eliminar curso</h2>
                        </div>
                        <hr />
                        <table class="table table-striped table-bordered " style="background-color: #EAE5E0; width: 92%; margin: 2%; margin-top:4%">
                            <thead class="thead-light">
                                <tr class="text-center">
                                    <th>Nombre</th>
                                    <th>Descripción</th>
                                    <th>Duración</th>
                                    <th>Costo</th>
                                </tr>
                            </thead>

                            <tr class="text-center">
                                <td>
                                    @Html.DisplayFor(model => model.name, new { @class = "form-control" })
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.description, new { @class = "form-control" })
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.duration, new { @class = "form-control" })
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.cost, new { @class = "form-control" })
                                </td>
                            </tr>

                        </table>

                        <div class="form-group" style="margin-top:7%">
                            <a class="main_nav_item btn btn-outline-dark" href="@Url.Action("Index","Courses")">Regresar</a>
                            <input style=" margin-left: 70%" type="submit" value="Eliminar" class="btn btn-outline-danger" />
                        </div>


                    </div>

                </div>
            </div>

        </div>
    }

</body>
</html>

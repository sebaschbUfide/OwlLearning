@model mysqltest.Models.FileControl

@Html.Partial("_Crudslayout")
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Crear Archivo</title>
    <link href="~/css/navStyle/navStyle.css" rel="stylesheet" />
    @*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    *@
    
</head>

<body style="background-color: #ffffff;">


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container-fluid" style="margin-top: 1%;">


            <div class="jumbotron jumbotron-fluid" style="background-color: #667b68;">
                <div class="container">

                    <div class="form-horizontal">

                        <h2 style="color: #EAE5E0;">Crear Nuevo Archivo</h2>
                        <h3 class="text-danger">@ViewBag.Error</h3>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            <h3 class="control-label col-md-12">Nombre del Archivo</h3>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.FileName, new { htmlAttributes = new { @class = "form-control text-dark" } })
                                @Html.ValidationMessageFor(model => model.FileName, "", new { @style = "color: #EAD1C5" })
                            </div>
                        </div>

                        <div class="form-group">
                            <h3 class="control-label col-md-12">Tipo de Archivo</h3>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.FileType, new { htmlAttributes = new { @class = "form-control text-dark" } })
                                @Html.ValidationMessageFor(model => model.FileType, "", new { @style = "color: #EAD1C5" })
                            </div>
                        </div>

                        <div class="form-group">
                            <h3 class="control-label col-md-12">Ruta del Archivo</h3>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.FilePath, new { htmlAttributes = new { @class = "form-control text-dark" } })
                                @Html.ValidationMessageFor(model => model.FilePath, "", new { @style = "color: #EAD1C5" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-12" style="margin-top:7%">
                                <a style=" margin-left: 2%" class="main_nav_item btn btn-outline-dark" href="@Url.Action("FilesList","Admin")">Regresar </a>
                                <input style=" margin-left: 25%" type="submit" value="Crear" class="main_nav_item btn btn-outline-dark" />
                            </div>
                        </div>
                     
                    </div>

                </div>

            </div>
        </div>
    }

</body>
</html>

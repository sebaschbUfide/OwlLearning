@model IEnumerable<mysqltest.Models.course_assignment>

@{
    
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Estudiantes Prematriculados</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="~/css/bootstrap.css" rel='stylesheet' type='text/css' /><!-- bootstrap css -->
    <link href="~/css/font-awesome.min.css" rel="stylesheet"><!-- fontawesome css -->
    <link href="plugins/fontawesome-free-5.0.1/css/fontawesome-all.css" rel="stylesheet" type="text/css">
    <link href="~/css/bootstrap4/main_styles.css" rel="stylesheet" type="text/css">
</head>
<body>

    <!-- header -->
    <header class="header d-flex flex-row">

        <div class="header_content d-flex flex-row align-items-center">
            <!-- Logo -->
            <div class="logo_container">
                <div class="logoA">
                    <img src="~/images/logo.png" width="140px" />
                </div>
            </div>


        </div>

    </header>

    <div class="container-fluid" style="margin-top:5%;">
        <h2 style="color: #677C78;" " class="text-center">ADMINISTRACIÓN DE ESTUDIANTES PRE-MATRICULADOS</h2>
        <div class="container-fluid">
            <a class="main_nav_item btn btn-outline-warning" href="@Url.Action("IndexEnrollStudents","User")">Volver atrás</a>
        </div>
        
        <hr />

        <table class="table table-striped table-bordered table-hover">

            <thead class="thead-dark">
                <tr class="text-center">
                    <th>Identificación</th>
                    <th>Curso</th>
                    <th>Horario</th>
                    <th>Configuración</th>
                </tr>
            </thead>
            @if (ViewBag.check == 1)
            {
                foreach (var item in Model)
                {
                    <tr class="text-center">
                        
                        <td>
                            @Html.DisplayFor(modelItem => item.users.dni)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.courses.name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.schedules.day) (@Html.DisplayFor(modelItem => item.schedules.star_time) - @Html.DisplayFor(modelItem => item.schedules.end_time) )
                        </td>
                        <td>
                            <a class="main_nav_item btn btn-outline-dark" href="@Url.Action("ConfirmEnrollment", "Admin", new { id = item.course_assign_id })">Confirmar Matrícula</a>
                            <a class="main_nav_item btn btn-outline-dark" href="@Url.Action("DeleteEnrollment", "User", new { id = item.course_assign_id })">Eliminar Pre-Matrícula</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <th class="text-center" colspan="4">
                        ¡No hay estudiantes pre matriculados!
                    </th>
                </tr>
            }
        </table>

    </div>

</body>

</html>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

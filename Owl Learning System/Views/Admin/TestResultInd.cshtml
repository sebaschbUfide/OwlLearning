@model IEnumerable<mysqltest.Models.vt_scored_record>

@{
    Layout = null;
}

<!DOCTYPE html>
@Html.Partial("_Crudslayout")
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Asignación Módulo-Archivo</title>
    <link href="~/css/navStyle/navStyle.css" rel="stylesheet" />
</head>
<body>



    <div class="container-fluid" style="margin-top:5%;">

        <h2 style="color: #677C78;" class="text-center">@ViewBag.vt</h2>

        <div class="container-fluid">
            <a class="main_nav_item btn btn-outline-dark" href="@Url.Action("TestsAssignedInd","Admin", new { id = ViewBag.module, idc = ViewBag.course})">Volver atrás</a>
        </div>

        <hr />

        <table class="table table-striped table-bordered table-hover">

            @if (ViewBag.check == 1)
            {
                <thead class="thead-dark">
                    <tr class="text-center">
                        
                        <th>
                            Total de Preguntas
                        </th>
                        <th>
                            Respuestas Correctas
                        </th>
                        <th>
                            Nota Obtenida
                        </th>
                        <th>
                            Fecha de Realización
                        </th>
                        <th>
                            Resultado
                        </th>

                    </tr>
                </thead>
                foreach (var item in Model)
                {
                    <tr class="text-center">

                    <td>
                        @Html.DisplayFor(modelItem => item.total_questions)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.correct_got_answer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.score)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.record_date)
                    </td>
                    <td>
                        @if (item.score >= ViewBag.minScore)
                        {
                            <h3 style="font-weight:bold; color: green;">Aprobado</h3>
                        }
                        else
                        {
                            <h3 style="font-weight:bold; color: red;">Reprobado</h3>
                        }
                    </td>

                    </tr>
                }
            }
            else
            {
                <tr class="text-center">

                    <th>
                        Prueba
                    </th>
                    <th>
                        Hora de Inicio
                    </th>
                    <th>
                        Hora de Finalización
                    </th>
                    <th>
                        Nota Mínima
                    </th>
                    <th colspan="2">
                        Acciones
                    </th>
                </tr>
                <tr class="text-center">

                    <td colspan="6">
                        <b>No hay Pruebas Asignadas a este Módulo.</b>
                    </td>
                </tr>
            }



        </table>

    </div>
</body>
</html>

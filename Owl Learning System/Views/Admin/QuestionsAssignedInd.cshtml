@model IEnumerable<mysqltest.Models.question_vt>
@Html.Partial("_Crudslayout")
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cursos</title>
    <link href="~/css/navStyle/navStyle.css" rel="stylesheet" />

</head>
<body>
    <div class="container-fluid" style="margin-top:5%;">
        <h2 style="color: #677C78;" " class="text-center">@ViewBag.prueba</h2>

            <a class="main_nav_item btn btn-outline-warning" href="@Url.Action("Index","VirtualTest")">Volver atrás</a>
        <hr />

        <table class="table table-striped table-bordered table-hover">

            @if (ViewBag.check == 1)
            {


                <thead class="thead-dark">
                    <tr class="text-center">
                        <th>Pregunta</th>
                        <th>Respuesta 1</th>
                        <th>Respuesta 2</th>
                        <th>Respuesta 3</th>
                        <th>Respuesta 4</th>
                        <th>Respuesta Correcta</th>
                        @if (ViewBag.role == 1)
                        {
                            <th>Acciones</th>
                        }

                    </tr>
                </thead>

                foreach (var item in Model)
                {
                    <tr class="text-center">

                        <td>
                            @Html.DisplayFor(modelItem => item.questions.question)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.questions.answer1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.questions.answer2)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.questions.answer3)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.questions.answer4)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.questions.correct_answer)
                        </td>
                        @*<td>
                                <a class="main_nav_item btn btn-outline-dark" href="@Url.Action("EditQstAssignment","Admin", new { id = item.question_vt_id })">Editar</a>
                            </td>*@
                        @if (ViewBag.role == 1)
                        {
                            <td>
                                <a class="main_nav_item btn btn-outline-dark" href="@Url.Action("DeleteQstAssignment","Admin", new { id = item.question_vt_id })">Eliminar</a>
                            </td>
                        }

                    </tr>
                }
            }
            else
            {
                <tr class="text-center">
                    <th>Pregunta</th>
                    <th>Respuesta 1</th>
                    <th>Respuesta 2</th>
                    <th>Respuesta 3</th>
                    <th>Respuesta 4</th>
                    <th>Respuesta Correcta</th>
                    <th colspan="2">Acciones</th>
                </tr>

                <tr class="text-center">

                    <td colspan="8">
                        <b>No hay Preguntas Asignadas a esta Prueba.</b>
                    </td>
                </tr>

            }



        </table>

    </div>

</body>

</html>


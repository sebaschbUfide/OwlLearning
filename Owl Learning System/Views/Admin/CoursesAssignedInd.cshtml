@model IEnumerable<mysqltest.Models.course_assignment>
@Html.Partial("_Crudslayout")
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Asignación Curso-Usuario</title>
    <link href="~/css/navStyle/navStyle.css" rel="stylesheet" />
</head>
<body>



    <div class="container-fluid" style="margin-top:5%;">

        <h2 style="color: #677C78;" class="text-center">@ViewBag.Usuario</h2>

        <div class="container-fluid">
            <a class="main_nav_item btn btn-outline-dark" href="@Url.Action("IndexProf","User")">Volver a Profesores</a>
        </div>

        <hr />

        <table class="table table-striped table-bordered table-hover">

            @if (ViewBag.check == 1)
            {
                <thead class="thead-dark">
                    <tr class="text-center">

                        <th>
                            Curso
                        </th>
                        <th>
                            Horario
                        </th>
                        <th>
                            Estado
                        </th>
                        <th colspan="2">
                            Acciones
                        </th>
                    </tr>
                </thead>
                foreach (var item in Model)
                {
                    <tr class="text-center">

                        <td>
                            @Html.DisplayFor(modelItem => item.courses.name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.schedules.day)
                            ( @Html.DisplayFor(modelItem => item.schedules.star_time)  - @Html.DisplayFor(modelItem => item.schedules.end_time))
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.status)
                        </td>
                        <td>
                            <a class="main_nav_item btn btn-outline-dark" href="@Url.Action("EditCourseAssignment","Admin", new { id = item.user_id })">Editar</a>
                        </td>
                        <td>
                            <a class="main_nav_item btn btn-outline-dark" href="@Url.Action("DeleteCourseAssignment","Admin", new { id = item.user_id })">Eliminar</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="text-center">

                    <th>
                        Curso
                    </th>
                    <th>
                        Estado
                    </th>
                    <th>
                        Acciones
                    </th>
                </tr>
                <tr class="text-center">

                    <td colspan="3">
                        <b>No hay Cursos Asignados a este Profesor.</b>
                    </td>
                </tr>
            }


        </table>

    </div>
</body>
</html>

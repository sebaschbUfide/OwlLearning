@model mysqltest.Models.module_vt
@Html.Partial("_Crudslayout")
@{
    Layout = null;
}




<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Asignar Prueba a Módulo</title>
    <link href="~/css/navStyle/navStyle.css" rel="stylesheet" />

    <link href="~/Scripts/jquery.datetimepicker.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/jquery-1.12.4.js"></script>
    <script src="~/Scripts/jquery.datetimepicker.full.min.js"></script>
    <script src="~/Scripts/jquery.datetimepicker.full.js"></script>
    <script src="~/Scripts/jquery.datetimepicker.js"></script>

</head>



<body>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container-fluid" style="margin-top: 3%;">


            <div class="jumbotron jumbotron-fluid" style="background-color: #667b68;">
                <div class="container">

                    <div class="form-horizontal">
                        <h2 style="color: #EAE5E0;">ASIGNAR PRUEBA A MODULO </h2>

                        <p style="color: #EAD1C5;">@ViewBag.Error</p>
                        <hr />

                        <div class="form-group">
                            <h3 class="control-label col-md-auto">Módulo</h3>
                            <div class="col-md-12">
                                @Html.DropDownListFor(model => model.module, new SelectList(ViewBag.module, "module_id", "name"), new { @class = "form-control text-dark" })
                                @Html.ValidationMessageFor(model => model.module, "", new { @style = "color: #EAD1C5" })
                            </div>
                        </div>

                        <div class="form-group">
                            <h3 class="control-label col-md-auto">Prueba Virtual</h3>
                            <div class="col-md-12">
                                @Html.DropDownListFor(model => model.virtual_test, new SelectList(ViewBag.test, "virtual_test_id", "name"), new { @class = "form-control text-dark" })
                                @Html.ValidationMessageFor(model => model.virtual_test, "", new { @style = "color: #EAD1C5" })
                            </div>
                        </div>

                        <div class="form-group">
                            <h3 class="control-label col-md-auto">Hora de Inicio</h3>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.star_time, new { htmlAttributes = new { @class = "form-control text-dark", @Value = DateTime.Today } })
                                @Html.ValidationMessageFor(model => model.star_time, "", new { @style = "color: #EAD1C5" })
                            </div>
                            <div>
                                <script>

                                    $('#star_time').datetimepicker({

                                        changeMonth: true,
                                        changeYear: true,
                                        FormData: 'H:i',
                                        timepickerScrollbar: false
                                    });

                                </script>
                            </div>

                        </div>

                        <div class="form-group">
                            <h3 class="control-label col-md-auto">Hora de Finalización</h3>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.end_time, new { htmlAttributes = new { @class = "form-control text-dark", @Value = DateTime.Today } })
                                @Html.ValidationMessageFor(model => model.end_time, "", new { @style = "color: #EAD1C5" })
                            </div>
                            <div>
                                <script>

                                    $('#end_time').datetimepicker({

                                        changeMonth: true,
                                        changeYear: true,
                                        FormData: 'H:i',
                                        timepickerScrollbar: false
                                    });

                                </script>
                            </div>
                        </div>

                        <div class="form-group">
                            <h3 class="control-label col-md-auto">Nota Mímima</h3>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.min_grade, new { htmlAttributes = new { @class = "form-control text-dark" } })
                                @Html.ValidationMessageFor(model => model.min_grade, "", new { @style = "color: #EAD1C5" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10" style="margin-top:5%">
                                <a style=" margin-left: 2%" class="main_nav_item btn btn-outline-dark" href="@Url.Action("Index","Module")">Regresar</a>
                                <input style=" margin-left: 18%" type="submit" value="Asignar" class="btn btn-outline-dark" />
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>


    }

</body>
</html>



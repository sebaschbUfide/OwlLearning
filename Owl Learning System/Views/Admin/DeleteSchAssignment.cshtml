@model mysqltest.Models.course_schedule

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar Asignación de Horario</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="~/css/bootstrap.css" rel='stylesheet' type='text/css' /><!-- bootstrap css -->
    <link href="~/css/font-awesome.min.css" rel="stylesheet"><!-- fontawesome css -->
    <link href="plugins/fontawesome-free-5.0.1/css/fontawesome-all.css" rel="stylesheet" type="text/css">
    <link href="~/css/bootstrap4/main_styles.css" rel="stylesheet" type="text/css">

</head>
<body style="background-color: #ffffff;">

    <!-- header -->
    <header class="header d-flex flex-row">

        <div class="header_content d-flex flex-row align-items-center">
            <!-- Logo -->
            <div class="logo_container">
                <div class="logoA">
                    <img src="~/images/logo.png" width="140px" />
                </div>
            </div>
            <nav class="main_nav_container">
                <div class="main_nav">



                </div>
            </nav>
        </div>

    </header>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.course_sh_id)

        <div class="form-actions no-color">

            <div class="container-fluid" style="margin-top: 3%;">
                

                <div class="jumbotron jumbotron-fluid" style="background-color: #667b68;">
                    <div class="container">

                        <div class="form-horizontal">
                            <h2 style="color: #EAE5E0;">Eliminar asignacion de horario a curso </h2>
                        </div>

                        <hr />

                        <table class="table table-striped table-bordered" style="background-color: #EAE5E0; width: 80%; margin-left: 2%; margin-top:4%">
                            <thead class="thead-light">
                                <tr class="text-center">
                                    <th>Curso</th>
                                    <th>Horario</th>
                                </tr>
                            </thead>

                                <tr class="text-center">
                                    <td>
                                        @ViewBag.course
                                    </td>
                                    <td>
                                        @ViewBag.schedule
                                    </td>
                                </tr>

                        </table>
                        <div class="form-group" style="margin-top:7%">
                            <a class="main_nav_item btn btn-outline-dark" href="@Url.Action("SchedulesAssignedInd","Admin", new { id = ViewBag.id })">Regresar</a>
                            <input style=" margin-left: 25%" type="submit" value="Eliminar" class="btn btn-outline-danger" />
                        </div>

                    </div>

                </div>
            </div>

        </div>
    }
</body>
</html>

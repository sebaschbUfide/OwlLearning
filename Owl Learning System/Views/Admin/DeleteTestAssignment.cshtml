@model mysqltest.Models.module_vt

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar Asignación de Prueba</title>
    <link href="~/css/homeCss/home.css" rel="stylesheet" />
    <link href="~/css/Cruds/crud-general2.css" rel="stylesheet" />
    <link href="~/css/styleguide.css" rel="stylesheet" />
    <link href="~/css/globals.css" rel="stylesheet" />
    <link href="~/css/css-boots/bootstrap.css" rel="stylesheet" />
</head>
<body style="background-color: #ffffff;">

    <div class="container-center-horizontal">
        <div class="crud-general2 screen">

            <div class="grupo-20">

                <div class="layout segoeui-regular-normal-ebb-22px">

                   
                </div>
            </div>
        </div>
    </div>
    <!-- header -->

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.module_VT_id)

        <div class="form-actions no-color">

            <div class="row justify-content-center" style="margin-top: 3%;">


                <div class="col-lg-6 px-lg-3 pt-4 card" style="style= border: 1xp; border-color: #667b68;">
                    <div class="container">

                        <div class="form-horizontal">
                            <h2 style="color: ;">Eliminar asignacion prueba-modulo</h2>
                        </div>
                        <hr />

                        <table class="table table-striped table-bordered" style="background-color: #D2DCCD; width: 100%; margin-top: 4%">
                            <thead class="thead-light">
                                <tr class="text-center">
                                    <th>Módulo</th>
                                    <th>Prueba</th>
                                    <th>Hora de Inicio</th>
                                    <th>Hora de Finalización</th>
                                    <th>Nota Mínima</th>
                                </tr>
                            </thead>
                            <tr class="text-center">
                                <td>
                                    @ViewBag.module
                                </td>
                                <td>
                                    @ViewBag.vt
                                </td>
                                <td>
                                    @Model.star_time
                                </td>
                                <td>
                                    @Model.end_time
                                </td>
                                <td>
                                    @Model.min_grade
                                </td>
                            </tr>

                        </table>
                        <div class="form-group pb-3">
                            <a class="main_nav_item btn btn-outline-dark" href="@Url.Action("TestsAssigned","Admin")">Regresar</a>
                            <input type="submit" value="Eliminar" class="btn btn-outline-danger" />
                        </div>

                    </div>

                </div>
            </div>

        </div>
    }
</body>
</html>

@model IEnumerable<mysqltest.Models.course_assignment>
@Html.Partial("_Crudslayout")
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Asignación Curso-Usuario</title>
    <link href="~/css/navStyle/navStyle.css" rel="stylesheet" />
</head>
<body>



    <div class="container-fluid" style="margin-top:5%;">

        <h2 style="color: #677C78;" class="text-center">@ViewBag.course</h2>

        <div class="container-fluid">
            <a class="main_nav_item btn btn-outline-dark" href="@Url.Action("SchedulesAssignedInd", "Admin", new { id = ViewBag.courseId })">Volver a Horarios de Curso</a>
            @if (ViewBag.check == 1)
            {
                <span>Cantidad de Alumnos Matriculados: <b> @ViewBag.studentQty</b> </span>
            }
        </div>

        <hr />

        <table class="table table-striped table-bordered table-hover">

            @if (ViewBag.check == 1)
            {
                <thead class="thead-dark">
                    <tr class="text-center">
                        <th>
                            Identificación
                        </th>
                        <th>
                            Nombre
                        </th>
                        <th>
                            Correo Electrónico
                        </th>
                        <th>
                            Teléfono
                        </th>
                        <th>
                            Horario
                        </th>
                        <th>
                            Fecha de Matrícula
                        </th>
                    </tr>
                </thead>
                foreach (var item in Model)
                {
                    <tr class="text-center">

                        <td>
                            @Html.DisplayFor(modelItem => item.users.dni)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.users.last_name), @Html.DisplayFor(modelItem => item.users.first_name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.users.email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.users.phone_number)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.schedules.day) (
                            @Html.DisplayFor(modelItem => item.schedules.star_time) - @Html.DisplayFor(modelItem => item.schedules.end_time) )
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.enrollTime)
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr class="text-center">

                    <th>
                        Identificación
                    </th>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Correo Electrónico
                    </th>
                    <th>
                        Teléfono
                    </th>
                    <th>
                        Horario
                    </th>
                    <th>
                        Fecha de Matrícula
                    </th>
                </tr>
                <tr class="text-center">
                    <td colspan="6">
                        <b>No hay Estudiantes Matriculados en este Horario</b>
                    </td>
                </tr>
            }



        </table>

    </div>
</body>
</html>

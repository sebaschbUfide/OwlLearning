@model mysqltest.Models.course_assignment
@Html.Partial("_Crudslayout")
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Asignar Curso a Usuario</title>
    <link href="~/css/navStyle/navStyle.css" rel="stylesheet" />
</head>
<body>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container-fluid" style="margin-top: 5%;">


            <div class="jumbotron jumbotron-fluid" style="background-color: #667b68;">
                <div class="container">

                    <div class="form-horizontal">
                        <h2 style="color: #EAE5E0;">Asignar Curso a Profesor</h2>
                        <hr />

                        <div class="form-group">
                            <h3 class="control-label col-md-2">Profesor</h3>
                            <div class="col-md-12">
                                @Html.DropDownListFor(model => model.user_id, new SelectList(ViewBag.user, "user_id", "email"), new { @class = "form-control text-dark" })
                                @Html.ValidationMessageFor(model => model.user_id, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <h3 class="control-label col-md-2">Curso</h3>
                            <div class="col-md-12">
                                @Html.DropDownListFor(model => model.course_id, new SelectList(ViewBag.course, "course_id", "name"), new { @class = "form-control text-dark" })
                                @Html.ValidationMessageFor(model => model.course_id, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-12" style="margin-top:5%">
                                <a class="main_nav_item btn btn-outline-dark" href="@Url.Action("IndexProf","User")">Regresar</a>
                                <input type="submit" value="Validar Horarios Disponibles" class="btn btn-success" />
                                <br /><br />
                                <h4 style="color: #EAD1C5"><b>@ViewBag.error</b></h4>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    }

</body>
</html>

@model IEnumerable<mysqltest.Models.questions>
@Html.Partial("_Crudslayout")
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cursos</title>
    <link href="~/css/navStyle/navStyle.css" rel="stylesheet" />

</head>
<body>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container-fluid" style="margin-top:5%;">

            <nav class="navbar  navbar-light bg-light" style="margin-right:2.5%; margin-left:2.5%;">
                <a class="main_nav_item btn btn-success" href="@Url.Action("CheckVirtualTest", "Admin", new { user = ViewBag.user, vt= ViewBag.vt})">Terminar Intento</a>
                <h3 style="color: #677C78">Total de Preguntas: @ViewBag.qty_q</h3>
            </nav>

            <table class="table table-striped table-bordered table-hove">


                @if (ViewBag.check == 1)
                {


                    <thead class="thead-dark">
                        <tr class="text-center">
                            <th>Pregunta</th>
                            <th>Respuesta Seleccionada</th>
                            <th>Acción</th>
                        </tr>
                    </thead>

                    foreach (var item in Model)
                    {
                        <tr class="text-center">

                            <td>
                                @Html.DisplayFor(modelItem => item.question)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.answer1)
                            </td>

                            <td>
                                <a class="main_nav_item btn btn-outline-dark" href="@Url.Action("AnswerQuestion","Admin", new { id = item.question_id, vt=@ViewBag.vt })">Responder</a>
                            </td>

                        </tr>
                    }
                }
                else
                {
                    <tr class="text-center">
                        <th>Pregunta</th>
                        <th>Respuesta 1</th>
                        <th>Respuesta 2</th>
                        <th>Respuesta 3</th>
                        <th>Respuesta 4</th>
                        <th>Respuesta Correcta</th>
                        <th colspan="2">Acciones</th>
                    </tr>

                    <tr class="text-center">

                        <td colspan="8">
                            <b>No hay Preguntas Asignadas a esta Prueba.</b>
                        </td>
                    </tr>

                }

            </table>


        </div>
    }
</body>

</html>


@model IEnumerable<mysqltest.Models.questions>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Prueba</title>
    <link rel="stylesheet" type="text/css" href="~/css/Cruds/crud-general2.css" />
    <link rel="stylesheet" type="text/css" href="~/css/styleguide.css" />
    <link rel="stylesheet" type="text/css" href="~/css/globals.css" />
    <link href="~/css/Pagination.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/css/css-boots/bootstrap.css" />

</head>
<body style="margin: 0; background: #ffffff">
    <input type="hidden" id="anPageName" name="page" value="crud-general2" />
    <div class="container-center-horizontal">
        <div class="crud-general2 screen">

            <div class="grupo-20">

            </div>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <h2 style="color: #677C78; margin-top: 2%;" class="text-center">Prueba virtual</h2>

        <div class="container-fluid" style="margin:2%;">

            <a class="btn btn-outline-dark" href="@Url.Action("CheckVirtualTest", "Admin", new { user = ViewBag.user, vt= ViewBag.vt})">Terminar Intento</a>
            <span>Total de Preguntas:<b> @ViewBag.qty_q</b> </span>

        </div>

        <div style=" width: 95%; margin-left: 3%;">

            <table class="table table-hover">


                @if (ViewBag.check == 1)
                {


                    <thead class="table-dark">
                        <tr class="text-center">
                            <th>Pregunta</th>
                            <th>Respuesta Seleccionada</th>
                            <th>Acción</th>
                        </tr>
                    </thead>

                    foreach (var item in Model)
                    {
                        <tr class="text-center">

                            <td>
                                @Html.DisplayFor(modelItem => item.question)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.answer1)
                            </td>

                            <td>
                                <a class="main_nav_item btn btn-outline-dark" href="@Url.Action("AnswerQuestion","Admin", new { id = item.question_id, vt=@ViewBag.vt })">Responder</a>
                            </td>

                        </tr>
                    }
                }
                else
                {
                    <tr class="text-center">
                        <th>Pregunta</th>
                        <th>Respuesta 1</th>
                        <th>Respuesta 2</th>
                        <th>Respuesta 3</th>
                        <th>Respuesta 4</th>
                        <th>Respuesta Correcta</th>
                        <th colspan="2">Acciones</th>
                    </tr>

                    <tr class="text-center">

                        <td colspan="8">
                            <b>No hay Preguntas Asignadas a esta Prueba.</b>
                        </td>
                    </tr>

                }

            </table>
       


            </div>
            }
</body>

</html>


@*@model IEnumerable<mysqltest.Models.FileControl>*@

@using mysqltest.Models;
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<FileControl>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lista de Archivos</title>
    <link href="~/css/Pagination.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="~/css/bootstrap.css" rel='stylesheet' type='text/css' /><!-- bootstrap css -->
    <link href="~/css/font-awesome.min.css" rel="stylesheet"><!-- fontawesome css -->
    <link href="plugins/fontawesome-free-5.0.1/css/fontawesome-all.css" rel="stylesheet" type="text/css">
    <link href="~/css/bootstrap4/main_styles.css" rel="stylesheet" type="text/css">

</head>
<body>

    <!-- header -->
    <header class="header d-flex flex-row">

        <div class="header_content d-flex flex-row align-items-center">
            <!-- Logo -->
            <div class="logo_container">
                <div class="logoA">
                    <img src="~/images/logo.png" width="90px" />
                </div>
            </div>

            <nav class="main_nav_container">
                <div class="main_nav">
                    <li class="main_nav_item"><a href="@Url.Action("Index","Home")">Inicio</a></li>
                </div>
            </nav>

        </div>

    </header>


    <h2 style="color: #677C78; margin-top:3%;" class="text-center">ADMINISTRACIÓN DE ARCHIVOS</h2>

    <div class="container-fluid" style="margin-top:3%;">

        <div class="row g-0" style="margin-bottom:2%; margin-left:1%;">

            <div class="col-md-9">

                <a class="main_nav_item btn btn-outline-dark" href="@Url.Action("Index","Admin")">Volver a Administración</a>
                @if (ViewBag.role == 1)
                {
                    <a class="main_nav_item btn btn-outline-dark" href="@Url.Action("AddFiles","Admin")">Crear Nuevo Archivo</a>

                }
            </div>

            <div class="col-md-3">

                <form class="form-inline my-2 my-lg-0 " style="margin-right: 0%">
                    <input class="form-control mr-sm-2 text-dark" type="text" id="search" placeholder="Buscar" onkeyup="myFunction()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#667b68" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
                </form>
            </div>

        </div>

        <table class="table table-striped table-bordered table-hover">

            @if (ViewBag.check == 1)
            {

                <thead class="thead-dark">
                    <tr class="text-center">

                        <th>
                            Nombre de Archivo
                        </th>
                        <th>
                            Tipo de Archivo
                        </th>
                        <th>
                            Ruta de Archivo
                        </th>
                        <th>
                            Acceso al Archivo
                        </th>
                        <th>
                            Acción
                        </th>

                    </tr>
                </thead>
                foreach (var item in Model)
                {
                    <tr class="text-center">

                        <td>
                            @Html.DisplayFor(modelItem => item.FileName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FileType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FilePath)
                        </td>
                        <td>
                            <a class="main_nav_item btn btn-outline-dark" href="@item.FilePath" target="_blank">Ir a Ruta</a>
                        </td>
                        <td>
                            <a class="main_nav_item btn btn-outline-dark" href="@Url.Action("DeleteFile","Admin", new { id= item.idFile})">Eliminar Archivo</a>
                        </td>

                    </tr>
                }
            }
            else
            {
                <tr class="text-center">

                    <th>
                        Tema
                    </th>
                    <th>
                        Descripción
                    </th>
                    <th>
                        Módulo
                    </th>
                    <th>
                        Descarga
                    </th>

                </tr>
                <tr class="text-center">

                    <td colspan="6">
                        <b>No hay Material Asignado.</b>
                    </td>
                </tr>
            }

        </table>

        <div class="row g-0" style="margin-left:1%;">
            <div class="col-md-10">
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
            </div>
            <div class="col-md-2">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>

    </div>

</body>
</html>

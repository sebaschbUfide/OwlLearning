@model IEnumerable<mysqltest.Models.Mod_Content>

@{
    
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cursos</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="~/css/bootstrap.css" rel='stylesheet' type='text/css' /><!-- bootstrap css -->
    <link href="~/css/font-awesome.min.css" rel="stylesheet"><!-- fontawesome css -->
    <link href="plugins/fontawesome-free-5.0.1/css/fontawesome-all.css" rel="stylesheet" type="text/css">
    <link href="~/css/bootstrap4/main_styles.css" rel="stylesheet" type="text/css">
   
</head>

<body>

    <!-- header -->
    <header class="header d-flex flex-row">

        <div class="header_content d-flex flex-row align-items-center">
            <!-- Logo -->
            <div class="logo_container">
                <div class="logoA">
                    <img src="~/images/logo.png" width="90px" />
                </div>
            </div>

            <nav class="main_nav_container">
                <li class="main_nav_item"><a href="@Url.Action("Index","Home")">Inicio</a></li>
            </nav>

        </div>

    </header>
    <br /><br />
    <div class="container-fluid">
        <a class="main_nav_item btn btn-outline-dark" href="@Url.Action("Index","UserProfile", new { id= @ViewBag.c})">Volver a Mi Perfil</a>
    </div>
    <hr />


    <table class="table table-striped table-bordered table-hover">



        <thead class="thead-dark">
            <tr class="text-center">
                <th>Módulo</th>
                <th>Multimedia</th>
                <th>Archivos</th>
            </tr>
        </thead>

        @if (ViewBag.check == 1)
        {
            foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>
                        @Html.DisplayFor(modelItem => item.modules.name)
                    </td>
                    <td>
                        <a class="btn btn-outline-dark " href="@Url.Action("CheckMediaInd", "Admin", new { id = item.Multi_Modulo.idMultimedia, idc = @ViewBag.course })">Ver Multimedia</a>
                    </td>
                    <td>
                        <a class="btn btn-outline-dark " href="@Url.Action("FileListInd", "Admin", new { id = item.FC_Module.idFile,idc =  ViewBag.course })">Ver Archivos</a>
                    </td>


                </tr>
            }

        }
        else
        {
            <tr class="text-center">
                <td colspan="3">
                    No hay módulos asignados a este curso.
                </td>
            </tr>
        }

    </table>


</body>


</html>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>

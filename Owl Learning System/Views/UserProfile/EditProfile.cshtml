@model mysqltest.Models.users

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
</head>

<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        <div class="container-fluid " style="margin-top: 3%;">

            <nav aria-label="breadcrumb" class="main-breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("index", "Home")">Inicio</a></li>
                    <li class="breadcrumb-item"><a href=@Url.Action("Index", "UserProfile")>Perfil</a></li>
                    <li class="breadcrumb-item active"><a>Editar Perfil</a></li>
                </ol>
            </nav>

            <div class="jumbotron jumbotron-fluid" style="background-color: #667b68;">
                <div class="container">

                    <div class="form-horizontal">
                        <h2 style="color: #EAE5E0;">Editar curso</h2>

                        <p style="color: #EAD1C5;">@ViewBag.Error</p>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger text-dark" })
                        @Html.HiddenFor(model => model.user_id)

                        <div class="form-group">
                            <h3 class="control-label col-md-12">Nombre</h3>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.first_name, new { htmlAttributes = new { @class = "form-control text-dark" } })
                                @Html.ValidationMessageFor(model => model.first_name, "", new { @style = "color: #EAD1C5" })
                            </div>
                        </div>

                        <div class="form-group">
                            <h3 class="control-label col-md-12">Apellidos</h3>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.last_name, new { htmlAttributes = new { @class = "form-control text-dark" } })
                                @Html.ValidationMessageFor(model => model.last_name, "", new { @style = "color: #EAD1C5" })
                            </div>
                        </div>

                        <div class="form-group">
                            <h3 class="control-label col-md-12">Correo Electr&oacute;nico</h3>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control text-dark" } })
                                @Html.ValidationMessageFor(model => model.email, "", new { @style = "color: #EAD1C5" })
                            </div>
                        </div>

                        <div class="form-group">
                            <h3 class="control-label col-md-12">N&uacute;mero Telef&oacute;nico</h3>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.phone_number, new { htmlAttributes = new { @class = "form-control text-dark" } })
                                @Html.ValidationMessageFor(model => model.phone_number, "", new { @style = "color: #EAD1C5" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-12">
                                <input type="submit" value="Editar" class="btn btn-outline-dark" />
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    }
</body>
</html>
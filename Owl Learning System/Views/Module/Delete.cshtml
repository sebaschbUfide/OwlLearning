@model mysqltest.Models.modules
@Html.Partial("_Crudslayout")
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Eliminar</title>
    <link href="~/css/navStyle/navStyle.css" rel="stylesheet" />
</head>

<body style="background-color: #ffffff;">

   

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.module_id)

        <div class="form-actions no-color">

            <div class="container-fluid" style="margin-top: 3%;">

                <div class="jumbotron jumbotron-fluid" style="background-color: #667b68;">
                    <div class="container">

                        <div class="form-horizontal">
                            <h2 style="color: #EAE5E0;">Eliminar modulo</h2>
                        </div>
                        <hr />

                        <table class="table table-striped table-bordered" style="background-color: #EAE5E0; width: 93%; margin-left: 2%; margin-top:4%">
                            <thead class="thead-light">
                                <tr class="text-center">
                                    <th>Nombre</th>
                                    <th>Descripción</th>
                                    <th>Curso</th>
                                </tr>
                            </thead>

                            <tr class="text-center">
                                <td>
                                    @Html.DisplayFor(model => model.name, new { @class = "form-control" })
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.description, new { @class = "form-control" })
                                </td>
                                <td>
                                    @ViewBag.course
                                </td>
                            </tr>

                        </table>
                        <div class="form-group" style="margin-top:7%">
                            <a class="main_nav_item btn btn-outline-dark" href="@Url.Action("Index","Module")">Regresar</a>
                            <input style=" margin-left: 38%" type="submit" value="Eliminar" class="btn btn-outline-danger" />
                        </div>
                    </div>
                </div>
            </div>

        </div>
    }

</body>
</html>

@model IEnumerable<mysqltest.Models.FC_Module>

@{
    Layout = null;
}

<!DOCTYPE html>
@Html.Partial("_Crudslayout")
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Asignación Módulo-Archivo</title>
    <link href="~/css/navStyle/navStyle.css" rel="stylesheet" />
</head>
<body>



    <div class="container-fluid" style="margin-top:5%;">

        <h2 style="color: #677C78;" class="text-center">@ViewBag.module</h2>

        <div class="container-fluid">
            <a class="main_nav_item btn btn-outline-dark" href="@Url.Action("IndexPlus","Module")">Volver atrás</a>
        </div>

        <hr />

        <table class="table table-striped table-bordered table-hover">

            @if (ViewBag.check == 1)
            {
                <thead class="thead-dark">
                    <tr class="text-center">

                        <th>
                            Nombre
                        </th>
                        <th>
                            Tipo
                        </th>
                        <th>
                            Ruta
                        </th>
                        @if (ViewBag.role == 1)
                        {
                            <th colspan="2">
                                Acciones
                            </th>
                        }

                    </tr>
                </thead>
                foreach (var item in Model)
                {
                    <tr class="text-center">

                        <td>
                            @Html.DisplayFor(modelItem => item.FileControl.FileName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FileControl.FileType)
                        </td>
                        <td>
                            <a class="btn btn-outline-dark" href="@Html.DisplayFor(modelItem => item.FileControl.FilePath)">Ir al Archivo</a>
                        </td>
                        @if (ViewBag.role == 1)
                        {
                            <td>
                                <a class="main_nav_item btn btn-outline-dark" href="@Url.Action("DeleteFileAssignment","Module", new { id = item.idFC_Module })">Eliminar</a>
                            </td>
                        }

                    </tr>
                }
            }
            else
            {
                <tr class="text-center">

                    <th>
                        Prueba
                    </th>
                    <th>
                        Hora de Inicio
                    </th>
                    <th>
                        Hora de Finalización
                    </th>
                    <th>
                        Nota Mínima
                    </th>
                    <th colspan="2">
                        Acciones
                    </th>
                </tr>
                <tr class="text-center">

                    <td colspan="6">
                        <b>No hay Pruebas Asignadas a este Módulo.</b>
                    </td>
                </tr>
            }



        </table>

    </div>
</body>
</html>

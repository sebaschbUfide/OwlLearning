@*@model IEnumerable<mysqltest.Models.modules>*@

@using mysqltest.Models;
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<modules>

@Html.Partial("_ModulosLayout")
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Módulos de Curso</title>
    <link href="~/css/navStyle/navStyle.css" rel="stylesheet" />
    <link href="~/css/Pagination.css" rel="stylesheet" />
    
</head>
<body>

    <div class="container-fluid" style="margin-top:5%;">

        <h2 style="color: #677C78" ; class="text-center">ADMINISTRACIÓN DE MÓDULOS</h2>

        <div class="row g-0" style="margin-top:2%; margin-left:1%;">

            <div class="col-md-9">

                @if (ViewBag.role == 1)
                {
                    <a class="main_nav_item btn btn-outline-dark" href="@Url.Action("Create", "Module")">Crear Nuevo Módulo</a>
                }
            </div>

            <div class="col-md-3">

                <form class="form-inline my-2 my-lg-0 " style="margin-right: 0%">
                    <input class="form-control mr-sm-2 text-dark" type="text" id="search" placeholder="Buscar" onkeyup="myFunction()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#667b68" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>
                </form>
            </div>

        </div>

        
        <script>
            function myFunction() {
                var input, filter, table, tr, td, i, txtValue;
                input = document.getElementById("search");
                filter = input.value.toUpperCase();
                table = document.getElementById("myTable");
                tr = table.getElementsByTagName("tr");
                for (i = 0; i < tr.length; i++) {
                    td = tr[i].getElementsByTagName("td")[0];
                    if (td) {
                        txtValue = td.textContent || td.innerText;
                        if (txtValue.toUpperCase().indexOf(filter) > -1) {
                            tr[i].style.display = "";
                        } else {
                            tr[i].style.display = "none";
                        }
                    }
                }
            }
        </script>

        <hr />
        <table class="table table-striped table-bordered table-hover" id="myTable">
            <thead class="thead-dark">
                <tr class="text-center">

                    <th>
                        Nombre
                    </th>
                    <th>
                        Descripción
                    </th>
                    <th>
                        Pertenece al Curso
                    </th>
                    @if (ViewBag.role == 1)
                    {
                        <th colspan="5">
                            Acciones
                        </th>
                    }
                    else
                    {
                        <th>
                            Acciones
                        </th>
                    }

                </tr>
            </thead>

            @if (ViewBag.Check == 1)
            {

                foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>
                            @Html.DisplayFor(modelItem => item.name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.courses.name)
                        </td>
                        @if (ViewBag.role == 1)
                        {
                            <td>
                                <a class="main_nav_item btn btn-outline-dark" href="@Url.Action("Edit", "Module", new { id = item.module_id })">Editar</a>
                            </td>
                            <td>
                                <a class="main_nav_item btn btn-outline-dark" href="@Url.Action("Delete", "Module", new { id = item.module_id })">Eliminar</a>
                            </td>
                            <td>
                                <a class="main_nav_item btn btn-outline-dark" href="@Url.Action("IndexPlus", "Module")">Contenido</a>
                            </td>
                            <td>
                                <a class="main_nav_item btn btn-outline-dark" href="@Url.Action("AsignTestToModule", "Admin", new { id = item.module_id })">Asignar Evaluación</a>
                            </td>
                        }
                        <td>
                            <a class="main_nav_item btn btn-outline-dark" href="@Url.Action("TestsAssignedInd", "Admin", new { id = item.module_id, idc = 0 })">Evaluaciones Asignadas</a>
                        </td>
                    </tr>
                }

            }
            else
            {
                <tr>
                    <th class="text-center" colspan="4">
                        ¡No hay módulos registrados!
                    </th>
                </tr>
            }

        </table>

        <div class="row g-0" style="margin-left:1%;">
            <div class="col-md-10">
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
            </div>
            <div class="col-md-2">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>

    </div>

</body>
</html>

@model IEnumerable<mysqltest.Models.multimedia>

@{
    Layout = null;
}

<!DOCTYPE html>
@Html.Partial("_Crudslayout")
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Asignación Módulo-Multimedia</title>
    <link href="~/css/navStyle/navStyle.css" rel="stylesheet" />
</head>
<body>



    <div class="container-fluid" style="margin-top:5%;">

        <h2 style="color: #677C78;" class="text-center">@ViewBag.module</h2>

        <div class="container-fluid">
            <a class="main_nav_item btn btn-outline-dark" href="@Url.Action("IndexPlus","Module")">Volver atrás</a>
        </div>

        <hr />

        <table class="table table-striped table-bordered table-hover">

            @if (ViewBag.check == 1)
            {
                <thead class="thead-dark">
                    <tr class="text-center">

                        <th>
                            Descripción
                        </th>
                        <th>
                            Tema
                        </th>
                        <th>
                            URL
                        </th>
                       

                    </tr>
                </thead>
                foreach (var item in Model)
                {
                    <tr class="text-center">

                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tema)
                        </td>
                        <td>
                            <iframe height="200" width="300" src=" @Html.DisplayFor(modelItem => item.URL)">
                            </iframe>
                        </td>
                        

                    </tr>
                }
            }
            else
            {
                <tr class="text-center">

                    <th>
                        Prueba
                    </th>
                    <th>
                        Hora de Inicio
                    </th>
                    <th>
                        Hora de Finalización
                    </th>
                    <th>
                        Nota Mínima
                    </th>
                    <th colspan="2">
                        Acciones
                    </th>
                </tr>
                <tr class="text-center">

                    <td colspan="6">
                        <b>No hay Multimedia Asignada a este Módulo.</b>
                    </td>
                </tr>
            }



        </table>

    </div>
</body>
</html>

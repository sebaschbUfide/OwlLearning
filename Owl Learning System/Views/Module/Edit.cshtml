@model mysqltest.Models.modules
@Html.Partial("_Crudslayout")
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link href="~/css/navStyle/navStyle.css" rel="stylesheet" />
</head>


<body>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container-fluid" style="margin-top: 3%;">

            <div class="jumbotron jumbotron-fluid" style="background-color: #667b68;">
                <div class="container">
                    <div class="form-horizontal">
                        <h2 style="color: #EAE5E0; ">Editar modulo</h2>

                        <p style="color: #EAD1C5;">@ViewBag.Error</p>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger text-dark" })
                        @Html.HiddenFor(model => model.module_id)

                        <div class="form-group">
                            <h3 class="control-label col-md-2">Nombre</h3>
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control text-dark" } })
                                @Html.ValidationMessageFor(model => model.name, "", new { @style = "color: #EAD1C5" })
                            </div>
                        </div>

                        <div class="form-group">
                            <h3 class="control-label col-md-2">Descripción</h3>
                            <div>
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.description, new { htmlAttributes = new { @class = "form-control text-dark" } })
                                    @Html.ValidationMessageFor(model => model.description, "", new { @style = "color: #EAD1C5" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <h3 class="control-label col-md-auto">Pertene al Curso</h3>
                            <div class="col-md-12">
                                @Html.DropDownListFor(model => model.course, new SelectList(ViewBag.courses, "course_id", "name"), new { @class = "form-control text-dark" })
                                @Html.ValidationMessageFor(model => model.course, "", new { @style = "color: #EAD1C5" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10" style="margin-top:7%">
                                <a class="main_nav_item btn btn-outline-dark" href="@Url.Action("Index","Module")">Regresar</a>
                                <input  type="submit" value="Editar" class="btn btn-outline-dark" />
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    }

</body>
</html>
